{
    "controller": "controllers/record",
    "iconClass": "ti ti-plug-connected",
    "createDisabled": false,
    "modelDefaultsPreparator": "chatwoot:handlers/chatwoot-inbox-integration/defaults-preparator",
    "modalViews": {
        "edit": "chatwoot:views/chatwoot-inbox-integration/modals/edit"
    },
    "defaultSidePanelFieldList": ["teams"],
    "dynamicLogic": {
        "fields": {
            "status": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            },
            "team": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            },
            "oAuthAccount": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappCloudApi"
                        }
                    ]
                },
                "required": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappCloudApi"
                        }
                    ]
                }
            },
            "businessAccountId": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappCloudApi"
                        },
                        {
                            "type": "isNotEmpty",
                            "attribute": "oAuthAccountId"
                        }
                    ]
                },
                "required": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappCloudApi"
                        }
                    ]
                }
            },
            "phoneNumber": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappCloudApi"
                        },
                        {
                            "type": "isNotEmpty",
                            "attribute": "businessAccountId"
                        }
                    ]
                },
                "required": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappCloudApi"
                        }
                    ]
                }
            },
            "phoneNumberId": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappCloudApi"
                        },
                        {
                            "type": "isNotEmpty",
                            "attribute": "id"
                        }
                    ]
                }
            },
            "qrCode": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "equals",
                            "attribute": "channelType",
                            "value": "whatsappQrcode"
                        }
                    ]
                }
            }
        }
    },
    "viewSetupHandlers": {
        "record/detail": [
            "chatwoot:handlers/chatwoot-inbox-integration/record-detail-setup"
        ],
        "record/edit": [
            "chatwoot:handlers/chatwoot-inbox-integration/record-detail-setup"
        ]
    },
    "detailActionList": [
        {
            "name": "activate",
            "label": "Activate",
            "handler": "chatwoot:handlers/chatwoot-inbox-integration/detail-actions",
            "actionFunction": "activate",
            "checkVisibilityFunction": "isActivateAvailable",
            "groupIndex": 0
        },
        {
            "name": "disconnect",
            "label": "Disconnect",
            "handler": "chatwoot:handlers/chatwoot-inbox-integration/detail-actions",
            "actionFunction": "disconnect",
            "checkVisibilityFunction": "isDisconnectAvailable",
            "groupIndex": 1
        },
        {
            "name": "reconnect",
            "label": "Reconnect",
            "handler": "chatwoot:handlers/chatwoot-inbox-integration/detail-actions",
            "actionFunction": "reconnect",
            "checkVisibilityFunction": "isReconnectAvailable",
            "groupIndex": 1
        }
    ]
}

