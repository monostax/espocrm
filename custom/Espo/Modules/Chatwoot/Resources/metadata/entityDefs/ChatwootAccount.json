{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "maxLength": 255
        },
        "platform": {
            "type": "link",
            "required": true
        },
        "chatwootAccountId": {
            "type": "int",
            "readOnly": true,
            "tooltip": true
        },
        "apiKey": {
            "type": "password",
            "tooltip": true,
            "required": false
        },
        "automationUser": {
            "type": "link",
            "readOnly": true
        },
        "locale": {
            "type": "enum",
            "options": ["pt_BR", "en", "es", "fr", "de", "it"],
            "default": "pt_BR"
        },
        "domain": {
            "type": "varchar",
            "maxLength": 255
        },
        "supportEmail": {
            "type": "email"
        },
        "status": {
            "type": "enum",
            "options": ["active", "suspended"],
            "default": "active"
        },
        "contactSyncEnabled": {
            "type": "bool",
            "default": true,
            "tooltip": true
        },
        "autoPendingEnabled": {
            "type": "bool",
            "default": true,
            "tooltip": true
        },
        "lastContactSyncAt": {
            "type": "datetime",
            "readOnly": true,
            "tooltip": true
        },
        "lastConversationSyncAt": {
            "type": "datetime",
            "readOnly": true,
            "tooltip": true
        },
        "contactSyncCursor": {
            "type": "int",
            "readOnly": true,
            "tooltip": true
        },
        "conversationSyncCursor": {
            "type": "int",
            "readOnly": true,
            "tooltip": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "team": {
            "type": "link",
            "required": true
        }
    },
    "links": {
        "platform": {
            "type": "belongsTo",
            "entity": "ChatwootPlatform",
            "foreign": "accounts"
        },
        "automationUser": {
            "type": "belongsTo",
            "entity": "ChatwootUser",
            "foreign": "automationForAccount"
        },
        "chatwootTeams": {
            "type": "hasMany",
            "entity": "ChatwootTeam",
            "foreign": "account"
        },
        "contacts": {
            "type": "hasMany",
            "entity": "ChatwootContact",
            "foreign": "chatwootAccount"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "team": {
            "type": "belongsTo",
            "entity": "Team"
        },
        "syncStates": {
            "type": "hasMany",
            "entity": "ChatwootSyncState",
            "foreign": "chatwootAccount"
        },
        "inboxes": {
            "type": "hasMany",
            "entity": "ChatwootInbox",
            "foreign": "chatwootAccount"
        },
        "agents": {
            "type": "hasMany",
            "entity": "ChatwootAgent",
            "foreign": "chatwootAccount"
        },
        "chatwootUsers": {
            "type": "hasMany",
            "entity": "ChatwootUser",
            "foreign": "chatwootAccount"
        },
        "chatwootInboxIntegrations": {
            "type": "hasMany",
            "entity": "ChatwootInboxIntegration",
            "foreign": "chatwootAccount"
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": ["name", "deleted"]
        },
        "assignedUser": {
            "columns": ["deleted"]
        },
        "createdAt": {
            "columns": ["createdAt"]
        },
        "createdAtId": {
            "unique": true,
            "columns": ["createdAt", "id"]
        }
    },
    "webhooks": {
        "type": "hasMany",
        "entity": "ChatwootAccountWebhook",
        "foreign": "account"
    }
}

