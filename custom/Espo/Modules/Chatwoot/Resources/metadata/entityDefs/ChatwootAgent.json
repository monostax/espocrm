{
    "fields": {
        "name": {
            "type": "varchar",
            "maxLength": 255,
            "required": true
        },
        "email": {
            "type": "email",
            "required": true
        },
        "password": {
            "type": "password",
            "dbType": "text",
            "required": false,
            "tooltip": true,
            "notStorable": true
        },
        "availableName": {
            "type": "varchar",
            "maxLength": 255
        },
        "role": {
            "type": "enum",
            "options": ["agent", "administrator"],
            "default": "agent",
            "required": true
        },
        "availabilityStatus": {
            "type": "enum",
            "options": ["available", "busy", "offline"],
            "default": "offline"
        },
        "autoOffline": {
            "type": "bool",
            "default": true
        },
        "confirmed": {
            "type": "bool",
            "default": false,
            "readOnly": true
        },
        "avatarUrl": {
            "type": "url"
        },
        "customRoleId": {
            "type": "int",
            "readOnly": true
        },
        "chatwootAgentId": {
            "type": "int",
            "readOnly": true,
            "tooltip": true
        },
        "chatwootAccount": {
            "type": "link",
            "required": true
        },
        "chatwootUser": {
            "type": "link"
        },
        "chatwootTeams": {
            "type": "linkMultiple"
        },
        "syncStatus": {
            "type": "enum",
            "options": ["pending", "synced", "error"],
            "default": "pending"
        },
        "lastSyncedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "lastSyncError": {
            "type": "text",
            "readOnly": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        }
    },
    "links": {
        "chatwootAccount": {
            "type": "belongsTo",
            "entity": "ChatwootAccount",
            "foreign": "agents"
        },
        "chatwootUser": {
            "type": "belongsTo",
            "entity": "ChatwootUser",
            "foreign": "agents"
        },
        "chatwootTeams": {
            "type": "hasMany",
            "entity": "ChatwootTeam",
            "relationName": "chatwootAgentChatwootTeam",
            "foreign": "chatwootAgents"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "uniqueAgent": {
            "unique": true,
            "columns": ["chatwootAgentId", "chatwootAccountId"]
        },
        "chatwootAccountId": {
            "columns": ["chatwootAccountId"]
        },
        "email": {
            "columns": ["deleted"]
        },
        "createdAt": {
            "columns": ["createdAt"]
        },
        "createdAtId": {
            "unique": true,
            "columns": ["createdAt", "id"]
        }
    }
}
