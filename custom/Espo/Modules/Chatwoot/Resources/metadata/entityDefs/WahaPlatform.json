{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "maxLength": 255
        },
        "isDefault": {
            "type": "bool",
            "default": false
        },
        "frontendUrl": {
            "type": "url",
            "required": true,
            "tooltip": true
        },
        "backendUrl": {
            "type": "url",
            "required": true,
            "tooltip": true
        },
        "apiKey": {
            "type": "password",
            "dbType": "text",
            "required": true,
            "tooltip": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        }
    },
    "links": {
        "sessions": {
            "type": "hasMany",
            "entity": "WahaSession",
            "foreign": "platform"
        },
        "chatwootInboxIntegrations": {
            "type": "hasMany",
            "entity": "ChatwootInboxIntegration",
            "foreign": "wahaPlatform"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": ["name", "deleted"]
        },
        "createdAt": {
            "columns": ["createdAt"]
        },
        "createdAtId": {
            "unique": true,
            "columns": ["createdAt", "id"]
        }
    }
}

