{
    "fields": {
        "credential": {
            "type": "link",
            "required": true,
            "view": "views/fields/link"
        },
        "action": {
            "type": "enum",
            "options": [
                "created",
                "updated",
                "rotated",
                "deleted",
                "viewed",
                "used"
            ],
            "required": true
        },
        "previousValue": {
            "type": "text"
        },
        "newValue": {
            "type": "text"
        },
        "reason": {
            "type": "text"
        },
        "ipAddress": {
            "type": "varchar",
            "maxLength": 45
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        }
    },
    "links": {
        "credential": {
            "type": "belongsTo",
            "foreign": "history",
            "entity": "Credential",
            "required": true
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "credentialId": {
            "columns": ["credentialId"]
        },
        "action": {
            "columns": ["action"]
        },
        "createdAt": {
            "columns": ["createdAt"]
        }
    }
}
