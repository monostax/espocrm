{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "maxLength": 100,
            "trim": true
        },
        "code": {
            "type": "varchar",
            "required": true,
            "unique": true,
            "maxLength": 50,
            "trim": true
        },
        "description": {
            "type": "text"
        },
        "category": {
            "type": "enum",
            "options": [
                "basicAuth",
                "tokenBased",
                "certificateBased",
                "apiKey",
                "oauth2",
                "awsCredentials",
                "gcpCredentials",
                "azureCredentials",
                "sshKey",
                "database",
                "keyValue",
                "jwt",
                "formAuth",
                "custom"
            ],
            "default": "custom",
            "required": true
        },
        "schema": {
            "type": "text",
            "required": true
        },
        "uiConfig": {
            "type": "text"
        },
        "encryptionFields": {
            "type": "jsonArray"
        },
        "requiresRotation": {
            "type": "bool",
            "default": false
        },
        "rotationDays": {
            "type": "int",
            "default": 90,
            "min": 1
        },
        "oAuthProvider": {
            "type": "link",
            "view": "views/fields/link"
        },
        "tokenFieldMapping": {
            "type": "jsonObject"
        },
        "healthCheckConfig": {
            "type": "jsonObject"
        },
        "isSystem": {
            "type": "bool",
            "default": false,
            "readOnly": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        }
    },
    "links": {
        "credentials": {
            "type": "hasMany",
            "foreign": "credentialType",
            "entity": "Credential"
        },
        "oAuthProvider": {
            "type": "belongsTo",
            "entity": "OAuthProvider",
            "foreign": "credentialTypes"
        }
    },
    "collection": {
        "orderBy": "name",
        "order": "asc"
    },
    "indexes": {
        "code": {
            "columns": ["code"]
        },
        "category": {
            "columns": ["category"]
        }
    }
}

