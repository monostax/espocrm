{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "pattern": "$noBadCharacters",
            "maxLength": 150,
            "trim": true
        },
        "description": {
            "type": "text"
        },
        "entityType": {
            "type": "enum",
            "options": ["ChatwootConversation", "Contact", "Lead", "Account"],
            "default": "ChatwootConversation",
            "required": true
        },
        "report": {
            "type": "link",
            "required": true,
            "tooltip": true
        },
        "classificationPrompt": {
            "type": "text",
            "required": true,
            "tooltip": true
        },
        "exitRule": {
            "type": "enum",
            "options": ["on_reply", "on_criteria_change", "manual"],
            "default": "on_reply",
            "tooltip": true
        },
        "isActive": {
            "type": "bool",
            "default": true
        },
        "agentEnabled": {
            "type": "bool",
            "default": false,
            "tooltip": true
        },
        "agentSystemPrompt": {
            "type": "text",
            "tooltip": true
        },
        "agentObjective": {
            "type": "varchar",
            "maxLength": 255,
            "tooltip": true
        },
        "agentTalkingPoints": {
            "type": "jsonArray",
            "tooltip": true
        },
        "agentAutonomyMode": {
            "type": "enum",
            "options": ["manual", "suggest", "semi_auto", "full_auto"],
            "default": "suggest",
            "tooltip": true
        },
        "agentMaxActions": {
            "type": "int",
            "default": 3,
            "min": 1,
            "max": 10
        },
        "agentCooldownHours": {
            "type": "int",
            "default": 48,
            "min": 1,
            "max": 720
        },
        "agentBusinessHoursOnly": {
            "type": "bool",
            "default": true
        },
        "membershipCount": {
            "type": "int",
            "readOnly": true,
            "notStorable": true,
            "layoutFiltersDisabled": true,
            "layoutMassUpdateDisabled": true
        },
        "lastEvaluatedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        }
    },
    "links": {
        "report": {
            "type": "belongsTo",
            "entity": "Report",
            "foreign": "smartAudiences"
        },
        "conversations": {
            "type": "hasMany",
            "entity": "ChatwootConversation",
            "relationName": "smartAudienceConversation",
            "foreign": "smartAudiences",
            "additionalColumns": {
                "isActive": {
                    "type": "bool",
                    "default": true
                },
                "reasoningMatches": {
                    "type": "bool"
                },
                "reasoningConfidence": {
                    "type": "float"
                },
                "reasoningExplanation": {
                    "type": "text"
                },
                "addedAt": {
                    "type": "datetime"
                },
                "removedAt": {
                    "type": "datetime"
                },
                "lastEvaluatedAt": {
                    "type": "datetime"
                },
                "userOverride": {
                    "type": "varchar",
                    "len": 20
                },
                "userOverrideReason": {
                    "type": "text"
                }
            }
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": ["name", "deleted"]
        },
        "entityType": {
            "columns": ["entityType", "deleted"]
        },
        "isActive": {
            "columns": ["isActive", "deleted"]
        },
        "createdAt": {
            "columns": ["createdAt"]
        }
    }
}
