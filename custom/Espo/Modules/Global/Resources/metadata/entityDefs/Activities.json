        },
        "parentId": {
            "type": "varchar",
            "layoutListDisabled": true,
            "layoutDetailDisabled": true,
            "layoutMassUpdateDisabled": true
        },
        "parentName": {
            "type": "varchar",
            "layoutListDisabled": true,
            "layoutDetailDisabled": true,
            "layoutMassUpdateDisabled": true
        },
        "parentType": {
            "type": "varchar",
            "layoutListDisabled": true,
            "layoutDetailDisabled": true,
            "layoutMassUpdateDisabled": true
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
