{
    "fields": {
        "_scope": {
            "type": "enum",
            "options": ["Meeting", "Call", "Task"],
            "translation": "Global.options.activityEntityType",
            "notStorable": false,
            "layoutListDisabled": false,
            "layoutFiltersDisabled": false
        },
        "name": {
            "type": "varchar",
            "required": true,
            "trim": true,
            "view": "global:views/activities/fields/name-with-icon"
        },
        "status": {
            "type": "enum",
            "options": [
                "Planned",
                "Held",
                "Not Held",
                "Not Started",
                "Started",
                "Completed",
                "Canceled",
                "Deferred"
            ],
            "default": "Planned",
            "style": {
                "Completed": "success",
                "Held": "success",
                "Not Held": "danger",
                "Canceled": "danger",
                "Deferred": "warning"
            }
        },
        "dateStart": {
            "type": "datetime",
            "default": "javascript: return this.dateTime.getNow(1);"
        },
        "dateEnd": {
            "type": "datetime"
        },
        "assignedUser": {
            "type": "link",
            "view": "views/fields/assigned-user",
            "entity": "User"
        },
