{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "pattern": "$noBadCharacters",
            "maxLength": 100,
            "trim": true
        },
        "order": {
            "type": "int",
            "default": 10,
            "min": 1,
            "tooltip": true
        },
        "probability": {
            "type": "int",
            "min": 0,
            "max": 100,
            "default": 0,
            "tooltip": true
        },
        "style": {
            "type": "enum",
            "options": [
                "",
                "default",
                "success",
                "danger",
                "warning",
                "info",
                "primary"
            ],
            "default": "default",
            "tooltip": true
        },
        "isActive": {
            "type": "bool",
            "default": true
        },
        "funnel": {
            "type": "link",
            "required": true,
            "view": "views/fields/link"
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        }
    },
    "links": {
        "funnel": {
            "type": "belongsTo",
            "entity": "Funnel",
            "foreign": "opportunityStages"
        },
        "opportunities": {
            "type": "hasMany",
            "entity": "Opportunity",
            "foreign": "opportunityStage"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        }
    },
    "collection": {
        "orderBy": "order",
        "order": "asc"
    },
    "indexes": {
        "name": {
            "columns": ["name", "deleted"]
        },
        "order": {
            "columns": ["order"]
        },
        "funnelId": {
            "columns": ["funnelId"]
        }
    }
}

