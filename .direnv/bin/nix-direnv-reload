#!/usr/bin/env bash
set -e
if [[ ! -d "/home/antl3x/repos/monostax/mono/components/crm/source" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/antl3x/repos/monostax/mono/components/crm/source")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/antl3x/repos/monostax/mono/components/crm/source" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/antl3x/repos/monostax/mono/components/crm/source/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/antl3x/repos/monostax/mono/components/crm/source/.envrc" "/home/antl3x/repos/monostax/mono/components/crm/source/.direnv"/*.rc
